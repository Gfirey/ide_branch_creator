<idea-plugin>
    <id>ten.branch_creator</id>
    <name>Tensor Dev Branch Creator</name>
     <vendor email="pashkun73@gmail.com" url="https://online.sbis.ru/person/aa838224-33cd-46ef-ae12-daacb0dc7041">Gubin Pavel</vendor>

     <description><![CDATA[
     Add buttons to fast Create and Checkout branchs by tensorflow notation<br/>
    <version>/<bugfix/feature>/<your_text>_<task_id>

    version - from "rc-..." branch
    task_id - from clipboard
     ]]></description>

     <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
          on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <depends>com.intellij.modules.vcs</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="BranchchF" class="Branchch" text="Branch Create Action Feature" description="feature" icon="icons/f.png">
            <add-to-group group-id="ToolbarRunGroup" anchor="first" relative-to-action="Stop"/>
        </action>
        <action id="BranchchB" class="Branchch" text="Branch Create Action Bugfix" description="bugfix" icon="icons/b.png">
            <add-to-group group-id="ToolbarRunGroup" anchor="first" relative-to-action="Stop"/>
        </action>
    </actions>
</idea-plugin>